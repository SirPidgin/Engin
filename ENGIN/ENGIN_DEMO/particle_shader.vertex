#version 120
layout (location = 0) attribute vec4 vertex; // <vec2 position, vec2 texCoords>

varying vec2 TexCoords;
varying vec4 ParticleColor;

uniform mat4 projection;
uniform vec2 offset;
uniform vec4 color;
uniform float scale;

void main()
{
    TexCoords = vertex.zw;
    ParticleColor = color;
    gl_Position = projection * vec4((vertex.xy * scale) + offset, 0.0, 1.0);
}